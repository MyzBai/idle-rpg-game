{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"additionalProperties": false,
	"required": ["iterations"],
	"properties": {
		"iterations": {
			"type": "number",
			"minimum": 1
		},
		"configs": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["name", "skills"],
				"additionalProperties": false,
				"properties": {
					"name": {
						"type": "string"
					},
					"includes": {
						"type": "array",
						"items": {
							"type": "string",
							"enum": ["skills", "items", "modTree"]
						}
					},
					"skills": {
						"type": "object",
						"required": ["attackSkills"],
						"properties": {
							"attackSkills": {
								"type": "array",
                                "description": "Must contain a skill with a levelReq of at least 1",
                                "minItems": 1,
                                "uniqueItems": true,
								"items": {
									"type": "string"
								}
							},
							"supportSkills": {
								"type": "array",
								"items": {
									"type": "object",
									"required": ["name"],
									"properties": {
										"name": { "type": "string" },
										"priority": { "type": "boolean" }
									}
								}
							}
						}
					},
					"items": {
						"type": "object",
						"properties": {
							"mods": {
								"type": "array",
								"items": {
									"type": "object",
									"required": ["name"],
									"properties": {
										"name": { "type": "string" },
										"priority": { "type": "boolean" }
									}
								}
							}
						}
					},
					"modTree": {
						"type": "object",
						"properties": {
							"nodes": {
								"type": "array",
								"items": {
									"type": "object",
									"required": ["name"],
									"properties": {
										"name": { "type": "string" },
										"priority": { "type": "boolean" }
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
