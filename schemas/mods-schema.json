{
    "$id": "module/mods-schema.json",
    "definitions": {
        "mod": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "stats"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "desc": {
                    "type": "string"
                },
                "weight": {
                    "type": "number"
                },
                "levelReq": {
                    "type": "number"
                },
                "stats": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/stat"
                    }
                }
            }
        },
        "stat": {
            "type": "object",
            "additionalProperties": false,
            "anyOf": [
                {"required": ["value"]},
                {"required": ["name", "value", "valueType"]},
                {"required": ["min", "max"]}
            ],
            "properties": {
                "name": {
                    "$ref": "#/definitions/stat/definitions/name"
                },
                "valueType": {
                    "$ref": "#/definitions/stat/definitions/valueType"
                },
                "value": {
                    "type": "number"
                },
                "min": {
                    "type": "number"
                },
                "max": {
                    "type": "number"
                },
                "flags": {
                    "$ref": "#/definitions/stat/definitions/flags"
                },
                "conditions": {
                    "$ref": "#/definitions/stat/definitions/conditions"
                },
                "keywords": {
                    "$ref": "#/definitions/stat/definitions/keywords"
                }
            },
            "definitions": {
                "name": {
                    "type": "string"
                },
                "valueType": {
                    "type": "string"
                },
                "value": {
                    "type": "number"
                },
                "min": {
                    "type": "number"
                },
                "max": {
                    "type": "number"
                },
                "flags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "keywords": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties":{
                            "name": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}