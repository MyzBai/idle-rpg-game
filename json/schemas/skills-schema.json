{
    "$id": "skills-schema.json",
    "type": "object",
    "additionalProperties": false,
    "required": ["data"],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "data": {
            "type": "object",
            "required": ["attacks"],
            "properties": {
                "maxSupports": {
                    "type": "integer"
                },
                "attacks": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/attackSkill"
                    }
                },
                "supports": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/support"
               
                    }
                }
            }
        }
    },
    "definitions": {
        "attackSkill": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 3,
                    "pattern": "^[A-Za-z0-9 ]+$"
                },
                "stats": {
                    "type": "object",
                    "properties": {
                        "attackSpeed": {"type": "number"},
                        "baseDamageMultiplier": {"type": "number"},
                        "manaCost": {"type": "number"}
                    }
   
                },
                "mods": {
                    "type": "array",
                    "items": {
                        "$ref": "mods-schema.json#/definitions/mod"
                    }
                }
            }
        },
        "support": {
            "type": "object",
            "required": ["name", "stats", "mods"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "stats":{
                    "type": "object",
                    "properties": {
                        "manaMultiplier": {
                            "type": "number"
                        }
                    }
                },
                "mods": {
                    "type": "array",
                    "items": {
                        "$ref": "mods-schema.json#/definitions/mod"
                    }
                }
            }
        }
    }
}
