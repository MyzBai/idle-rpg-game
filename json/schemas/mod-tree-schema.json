{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "module/mod-tree-schema.json",
    "type": "object",
    "required": ["data"],
    "properties": {
        "$schema": {"type":"string"},
        "data": {
            "type": "object",
            "required": ["groups"],
            "properties": {
                "groups": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": ["nodes"],
                        "properties": {
                            "config": {
                                "type": "object",
                                "properties": {
                                    "reqPoints": {
                                        "type": "number"
                                    }
                                }
                            },
                            "nodes": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": ["config","mods"],
                                    "properties": {
                                        "config": {
                                            "type": "object",
                                            "required": ["name"],
                                            "properties": {
                                                "name": {"type":"string"}
                                            }
                                        },
                                        "mods": {
                                            "type": "array",
                                            "items":{
                                                "$ref": "mods-schema.json#/definitions/mod"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}